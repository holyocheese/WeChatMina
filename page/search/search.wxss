/* page/search/search.wxss */
.weui-search-bar{border-top:none}
.weui-search-bar__label,.weui-search-bar__form{border-radius: 15px;}
.search-top{position: relative;}
.search-top .weui-cells{position: absolute;width:100%;margin-top:0;}
.search-zjsc{padding:20rpx;}
.search-result{color:#fff;}
.search-result view{display: inline-block;background-color: #ccc;border-radius: 20rpx;padding:0 20rpx;margin-right:20rpx;margin-top:10rpx;}
.page__bd{margin-top: 10rpx;}
.weui-media-box__hd_in-appmsg{width: 60rpx; height: 60rpx; line-height: 60rpx;}
.weui-media-box{padding:30rpx 15rpx;}
.weui-media-box__bd_in-appmsg{padding-right: 145rpx;}
.weui-media-box__desc{position: relative; display: -webkit-box;word-break: break-all;text-overflow: ellipsis;overflow: hidden;-webkit-box-orient: vertical;-webkit-line-clamp:2;color: #000;}
.call{display: inline-block; position: absolute; right:50rpx; top:50%; margin-top:-30rpx; width: 60rpx; height: 60rpx;}
.min-btn{position: absolute;top: 30rpx; right:20rpx;}
.good-msg{color: #a9a9a9;}
.up-bg{background: rgba(64,137,254,.1); color:#4089fe;margin-left:10rpx;}
.xie-bg{background: rgba(255,102,0,.1); color:#ff6600;margin-left:10rpx;}
.title-box{position: relative;}
.tag{position: absolute; top:0; left:0;width: 110rpx; height:110rpx; transform:rotate(-90deg);
-ms-transform:rotate(-90deg); 
-moz-transform:rotate(-90deg); 
-webkit-transform:rotate(-90deg); 
-o-transform:rotate(-90deg);}
.weui-panel{margin-top: 10rpx;}
.weui-search-bar__box{padding-right: 10rpx;}
.weui-icon-clear {z-index: 5;}
.weui-search-bar__text{margin-top: -3rpx;}
.weui-media-box__desc{line-height: 1.3}

